# Database (defaults match docker-compose)
DATABASE_URL="postgresql://wormhole:wormhole@localhost:5432/wormhole"

# JWT
JWT_SECRET="change-me-in-production-min-32-chars"
JWT_ISSUER="wormhole-api"
JWT_EXPIRES_IN="7d"

# Server
HOST="0.0.0.0"
PORT=3000

# Optional: Redis for queues later
REDIS_URL="redis://localhost:6379"

# Optional: 32-byte hex key for encrypting connection secrets (required in production; use KMS/Vault there)
# ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"
